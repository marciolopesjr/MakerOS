# --- MakerOS i3 Config v1.0 ---
# Based on CodeMakers Design System

set $mod Mod4

# --- Typography ---
font pango:Space Grotesk Medium 10

# --- Colors (CodeMakers Palette) ---
set $lime      #84cc16
set $lime_dim  #4d7c0f
set $slate900  #0f172a
set $darkbg    #020617
set $text      #f8fafc
set $text_dim  #94a3b8
set $alert     #ef4444

# --- Visual (Gaps & Borders) ---
# Espaço entre janelas para ver o grid do wallpaper
gaps inner 15
gaps outer 5

# Sem barras de título, apenas bordas finas 'técnicas'
for_window [class="^.*"] border pixel 2
default_border pixel 2
default_floating_border pixel 2

# --- Window Colors ---
# class                 border     backgr.   text    indicator  child_border
client.focused          $lime      $lime     $darkbg $lime      $lime
client.focused_inactive $slate900  $darkbg   $text   $slate900  $slate900
client.unfocused        $darkbg    $darkbg   $text_dim $darkbg  $darkbg
client.urgent           $alert     $alert    $text   $alert     $alert
client.placeholder      $darkbg    $darkbg   $text   $darkbg    $darkbg
client.background       $darkbg

# --- Autostart (O Polimento) ---
# 1. Compositor (Sombras e Blur)
exec_always --no-startup-id picom -b

# 2. Fundo Sólido (CyberDark do Design System)
exec_always --no-startup-id xsetroot -solid "#020617"

# 3. Iniciar Dashboard (Conky)
exec_always --no-startup-id killall -q conky
exec_always --no-startup-id conky


# 3. Polybar (Matar antigas e iniciar a 'makerbar')
exec_always --no-startup-id killall -q polybar
exec_always --no-startup-id while pgrep -u $UID -x polybar >/dev/null; do sleep 1; done
exec_always --no-startup-id polybar makerbar

# 4. Notificações
exec --no-startup-id dunst

# 5. Network Manager Applet (Ícone de Wi-Fi na tray)
exec --no-startup-id nm-applet

# 6. Autenticação Polkit (Para pedir senha visualmente quando necessário)
exec --no-startup-id /usr/lib/policykit-1-gnome/polkit-gnome-authentication-agent-1

# --- Keybindings ---

# Apps Essenciais
bindsym $mod+Return exec kitty
bindsym $mod+d exec "rofi -show drun"
bindsym $mod+w exec firefox-esr
bindsym $mod+f exec thunar
bindsym Print exec "scrot ~/Pictures/Screenshot-%Y-%m-%d-%H%M%S.png"

# Janelas
bindsym $mod+q kill
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Layouts
bindsym $mod+h split h
bindsym $mod+v split v
bindsym $mod+s layout stacking
bindsym $mod+e layout toggle split
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

# Workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# Sistema
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Exit MakerOS?' -B 'Yes' 'i3-msg exit'"

# Resize Mode
mode "resize" {
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"
